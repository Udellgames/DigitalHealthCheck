@page
@model DigitalHealthCheckWeb.Pages.BloodPressureModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewData["Title"] = "Blood pressure";
}
@{
    var antiForgeryToken = Xsrf.GetAndStoreTokens(HttpContext).RequestToken;
}

<component type="typeof(Components.Pages.BloodPressurePage)"
           render-mode="Static"
           param-antiForgery="@antiForgeryToken"
           param-errorList="@Model.ErrorList"
           param-knowYourBloodPressure="@Model.Model.KnowYourBloodPressure"
           param-systolicBloodPressure="@Model.Model.Systolic"
           param-diastolicBloodPressure="@Model.Model.Diastolic"
           param-knowYourBloodPressureError="@Model.KnowYourBloodPressureError"
           param-systolicBloodPressureError="@Model.SystolicBloodPressureError"
           param-diastolicBloodPressureError="@Model.DiastolicBloodPressureError" />